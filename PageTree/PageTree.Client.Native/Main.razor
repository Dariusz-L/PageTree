<Router AppAssembly="@typeof(Main).Assembly" AdditionalAssemblies="new [] { typeof(PageTree.Client.Shared.Components.MainLayout).Assembly }">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(PageTree.Client.Shared.Components.MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(PageTree.Client.Shared.Components.MainLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>
